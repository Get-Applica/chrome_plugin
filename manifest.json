{
  "name": "Applica Extension",
  "description": "Applica Extension - right-hand drawer for app integration",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://app.getapplica.com/*"
  ],
  "action": {
    "default_icon": "images/applica_logo.png",
    "default_title": "Toggle Applica drawer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "lib/config.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/config.js",
        "lib/api.js",
        "drawer/drawer.html",
        "drawer/drawer.css",
        "drawer/drawer.js",
        "images/applica_logo.png"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}