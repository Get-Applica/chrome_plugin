{
  "name": "Applica Extension",
  "description": "Applica Extension - left-hand drawer for login and app integration",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:4000/*",
    "https://*.fly.dev/*"
  ],
  "action": {
    "default_icon": "images/applica_logo.png",
    "default_title": "Toggle Applica drawer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://localhost:4000/*"],
      "js": ["config.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config.js", "drawer.html", "drawer.css", "drawer.js", "api.js"],
      "matches": ["https://*/*"]
    }
  ]
}
